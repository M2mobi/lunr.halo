{
  "name": "lunr/halo",
  "description": "Lunr.Halo is a set of PHPUnit helper libraries.",
  "keywords": [ "phpunit", "unit tests", "mocking" ],
  "homepage": "https://github.com/lunr-php/lunr.halo",
  "type": "library",
  "license": "MIT",
  "require": {
    "php": ">=7.4",
    "ext-uopz": ">=6.1"
  },
  "require-dev": {
    "phpunit/phpunit": ">=9.0 <9.7",
    "ext-xdebug": ">=3.0",
    "psr/log": ">=1.1"
  },
  "config": {
    "optimize-autoloader": true
  },
  "autoload": {
    "psr-4": {"Lunr\\Halo\\": "src/Lunr/Halo/"}
  }
}
